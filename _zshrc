source ~/.autoenv/activate.sh
source ~/.antigen/antigen.zsh

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle profiles
antigen bundle git
antigen bundle autoenv
antigen bundle colorize
antigen bundle compleat
antigen bundle debian
antigen bundle history-substring-search
antigen bundle screen
antigen bundle colored-man

# Syntax highlighting bundle.
antigen bundle zsh-users/zsh-syntax-highlighting

# Load the theme.
antigen theme $HOME/projects/dotfiles/_antigen/themes dklight --no-local-clone

# Tell antigen that you're done.
antigen apply

# Configure dircolors
eval "`dircolors -b ~/.dircolors`"

# Aliases
alias ls="ls -lh --color=auto"

# Color terminal that works with GNU Screen
export TERM=xterm-256color

# Default Vagrant provider
export VAGRANT_DEFAULT_PROVIDER=libvirt

# Include personal bin
# TODO Remove
export PATH=$PATH:~/bin

# Disable screen sleeping in Ubuntu
xset -dpms >/dev/null 2>&1 || echo 'Didn\'t found xset. Ignoring'
xset s off >/dev/null 2>&1 || echo 'Didn\'t found xset. Ignoring'

# Set ssh passphrase dialog for KDE
export SSH_ASKPASS=/usr/bin/ksshaskpass

# Store SSH passphrase on the first connection
ssh() {
    if ! ssh-add -l &>/dev/null; then
        ssh-add </dev/null &>/dev/null
    fi
    command ssh "$@"
}
